-- Add service AM type
insert into service_registry_attribute
    (service_id, name, value)
  values
    (
     (select id from service_registry
       where service_urn
         = 'urn:publicid:IDN+openflow:foam:foam.instageni.cenic.net+authority+am'),
     'UI_AM_TYPE',
     'ui_foam_am'
    );

