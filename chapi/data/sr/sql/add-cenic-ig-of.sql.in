insert into service_registry
    (service_type, service_url, service_cert, service_name,
     service_description, service_urn)
  values
    ( -- TYPE: zero = aggregate
      0,
      -- URL
      'https://foam.instageni.cenic.net:3626/foam/gapi/2',
      -- CERT
     '@srcertsdir@/cenic-ig-of.pem',
      -- NAME
     'CENIC InstaGENI OpenFlow',
      -- DESCRIPTION
     'CENIC InstaGENI Rack OpenFlow',
      -- URN
     'urn:publicid:IDN+openflow:foam:foam.instageni.cenic.net+authority+am'
    );

insert into service_registry
    (service_type, service_url, service_cert, service_name,
     service_description, service_urn)
  values
