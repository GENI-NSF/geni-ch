# Create an MA CRL file in /usr/share/geni-ch/chapi/ma
# Should be called only once on a given clearinghouse instance

echo "1000" > /tmp/crlnumber
sudo chown www-data.www-data /tmp/crlnumber
sudo mv /tmp/crlnumber /usr/share/geni-ch/CA
sudo openssl ca -keyfile /usr/share/geni-ch/ma/ma-key.pem -cert /usr/share/geni-ch/ma/ma-cert.pem -config /usr/share/geni-ch/CA/openssl.cnf -gencrl -out /usr/share/geni-ch/ma/ma-crl.pem
echo "MA CRL File created"